# Photonic Neural Network Foundry - Environment Variables Template
# Copy this file to .env and customize the values for your development environment

# =============================================================================
# Development Configuration
# =============================================================================

# Development mode settings
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# =============================================================================
# Photonic Computing Configuration
# =============================================================================

# Default photonic parameters
DEFAULT_WAVELENGTH=1550  # nm - Standard telecommunications wavelength
DEFAULT_PDK=skywater130   # Process Design Kit identifier
OPTICAL_POWER_BUDGET=10   # dBm - Maximum optical power for safety

# Simulation settings
SIMULATION_PRECISION=float32  # float16, float32, float64
MAX_SIMULATION_TIME=60        # seconds - Timeout for long simulations
ENABLE_GPU_ACCELERATION=true

# =============================================================================
# Machine Learning Configuration
# =============================================================================

# PyTorch settings
PYTORCH_DEVICE=auto           # auto, cpu, cuda, mps
TORCH_NUM_THREADS=4          # CPU threads for PyTorch operations
CUDA_VISIBLE_DEVICES=0       # GPU device indices (comma-separated)

# Model transpilation settings
DEFAULT_BATCH_SIZE=32
MAX_MODEL_PARAMETERS=1000000000  # 1B parameters limit
TRANSPILATION_TIMEOUT=300        # seconds

# =============================================================================
# Containerization and Development
# =============================================================================

# Docker configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_NAMESPACE=photonic-foundry
DOCKER_TAG=latest

# Jupyter configuration
JUPYTER_PORT=8888
JUPYTER_TOKEN=                   # Leave empty for no token in development
JUPYTER_ENABLE_LAB=true

# Development server
DEV_SERVER_PORT=8080
HOT_RELOAD=true

# =============================================================================
# Tool Configuration
# =============================================================================

# EDA tool paths (customize based on your installation)
VERILATOR_ROOT=/usr/local/share/verilator
YOSYS_PATH=/usr/local/bin/yosys
ICARUS_VERILOG_PATH=/usr/local/bin/iverilog

# Python tool configuration
BLACK_LINE_LENGTH=88
MYPY_CACHE_DIR=.mypy_cache
PYTEST_CACHE_DIR=.pytest_cache

# =============================================================================
# Performance and Resource Limits
# =============================================================================

# Memory limits
MAX_MEMORY_USAGE=8GB         # Maximum memory per process
SWAP_USAGE_LIMIT=2GB         # Maximum swap usage

# CPU configuration
MAX_CPU_CORES=4              # Maximum CPU cores to use
PARALLEL_JOBS=4              # Number of parallel compilation jobs

# Temporary file management
TEMP_DIR=/tmp/photonic-foundry
CLEANUP_TEMP_FILES=true
MAX_TEMP_SIZE=5GB

# =============================================================================
# Logging and Monitoring
# =============================================================================

# Logging configuration
LOG_FORMAT=structured        # simple, structured, json
LOG_OUTPUT=console          # console, file, both
LOG_FILE_PATH=logs/foundry.log
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# Metrics and telemetry
ENABLE_METRICS=false         # Set to true to enable performance metrics
METRICS_ENDPOINT=http://localhost:9090
TELEMETRY_BATCH_SIZE=100

# =============================================================================
# Security Configuration
# =============================================================================

# API security (if applicable)
API_SECRET_KEY=              # Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_TIMEOUT=3600         # seconds
ENABLE_CORS=false

# File system security
RESTRICT_FILE_ACCESS=true    # Limit file system access to workspace
ALLOW_SYMLINKS=false         # Security: prevent symlink attacks
MAX_FILE_SIZE=100MB          # Maximum individual file size

# =============================================================================
# Testing Configuration
# =============================================================================

# Test database and fixtures
TEST_DATA_PATH=tests/fixtures
GENERATE_TEST_REPORTS=true
TEST_TIMEOUT=30              # seconds per test
ENABLE_COVERAGE_REPORT=true
MIN_COVERAGE_THRESHOLD=90    # percentage

# Performance testing
BENCHMARK_ITERATIONS=3
PERFORMANCE_REGRESSION_THRESHOLD=5  # percentage
ENABLE_STRESS_TESTS=false

# =============================================================================
# Cloud and Deployment (Production)
# =============================================================================

# Cloud provider settings (AWS/GCP/Azure)
CLOUD_PROVIDER=              # aws, gcp, azure
CLOUD_REGION=us-west-2
CLOUD_STORAGE_BUCKET=

# Container registry
CONTAINER_REGISTRY_URL=
CONTAINER_REGISTRY_USERNAME=
CONTAINER_REGISTRY_PASSWORD=

# Kubernetes settings
K8S_NAMESPACE=photonic-foundry
K8S_SERVICE_ACCOUNT=
HELM_CHART_VERSION=

# =============================================================================
# External Integrations
# =============================================================================

# GitHub integration
GITHUB_TOKEN=                # Personal access token for GitHub API
GITHUB_REPOSITORY=danieleschmidt/photonic-nn-foundry

# Artifact storage
ARTIFACT_STORAGE_TYPE=local  # local, s3, gcs
ARTIFACT_RETENTION_DAYS=90

# Notification services
SLACK_WEBHOOK_URL=
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587

# =============================================================================
# Development Overrides
# =============================================================================

# Override any setting above for local development
# These will not be committed to version control

# Example overrides for development:
# DEBUG=true
# LOG_LEVEL=DEBUG
# ENABLE_GPU_ACCELERATION=false
# JUPYTER_TOKEN=development-token
# MAX_MEMORY_USAGE=16GB