# =============================================================================
# PHOTONIC NEURAL NETWORK FOUNDRY - ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
TESTING=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary database URL (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///data/photonic_foundry.db

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Database migration settings
DB_AUTO_MIGRATE=true
DB_BACKUP_ON_MIGRATE=true

# =============================================================================
# CACHE CONFIGURATION  
# =============================================================================

# Redis cache URL
REDIS_URL=redis://localhost:6379/0

# Cache settings
CACHE_DEFAULT_TIMEOUT=3600
CACHE_CIRCUIT_TIMEOUT=86400
CACHE_MODEL_TIMEOUT=7200

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================

# Server settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_PREFIX=/api/v1

# CORS settings
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# Request limits
MAX_REQUEST_SIZE=104857600  # 100MB
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# API documentation
ENABLE_API_DOCS=true
API_TITLE=Photonic Neural Network Foundry API
API_VERSION=0.1.0

# =============================================================================
# PHOTONIC ACCELERATOR CONFIGURATION
# =============================================================================

# Default PDK (Process Design Kit)
DEFAULT_PDK=skywater130
DEFAULT_WAVELENGTH=1550

# Simulation settings
DEFAULT_PRECISION=8
DEFAULT_Q_FACTOR=10000
DEFAULT_FSR_GHZ=100

# Circuit optimization
ENABLE_CIRCUIT_OPTIMIZATION=true
OPTIMIZATION_PASSES=5
THERMAL_BUDGET_MW=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Log file settings
LOG_FILE=logs/photonic-foundry.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5
LOG_FILE_ENABLED=true

# Component-specific log levels
LOG_LEVEL_DATABASE=INFO
LOG_LEVEL_API=INFO
LOG_LEVEL_CORE=INFO
LOG_LEVEL_TRANSPILER=INFO

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API security
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_EXPIRY_HOURS=24

# Rate limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_STORAGE=redis

# Input validation
MAX_MODEL_SIZE_MB=500
MAX_CIRCUIT_LAYERS=1000
ALLOWED_FILE_TYPES=.pth,.onnx,.pb,.json

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Jupyter configuration
JUPYTER_ENABLE_LAB=true
JUPYTER_PORT=8888
JUPYTER_TOKEN=
JUPYTER_PASSWORD=

# Development server
RELOAD_ON_CHANGE=true
ENABLE_PROFILING=false
PROFILING_OUTPUT_DIR=profiling/

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Metrics collection
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Health checks
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=30

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000  # milliseconds
ENABLE_TRACING=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email notifications (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true

# Slack notifications (optional)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#photonic-foundry

# GitHub integration (optional)
GITHUB_TOKEN=
GITHUB_REPO=

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Container settings
CONTAINER_NAME=photonic-foundry
CONTAINER_PORT=8000

# Resource limits
MEMORY_LIMIT=2g
CPU_LIMIT=2

# Storage settings
DATA_VOLUME=/data
LOG_VOLUME=/logs
EXPORT_VOLUME=/exports

# =============================================================================
# EXPERIMENTAL FEATURES
# =============================================================================

# Quantum photonic features
ENABLE_QUANTUM_FEATURES=false
QUANTUM_BACKEND=simulator

# Advanced optimizations
ENABLE_ML_OPTIMIZATION=false
ENABLE_QUANTUM_OPTIMIZATION=false

# Research features
ENABLE_RESEARCH_MODE=false
EXPORT_RESEARCH_DATA=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test database
TEST_DATABASE_URL=sqlite:///data/test_photonic_foundry.db
TEST_REDIS_URL=redis://localhost:6379/1

# Test settings
TEST_TIMEOUT=300
TEST_PARALLEL=true
TEST_COVERAGE_MIN=80

# Fixtures
USE_TEST_FIXTURES=true
RESET_DB_BETWEEN_TESTS=true