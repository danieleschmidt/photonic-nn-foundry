{
  "dashboard": {
    "id": null,
    "title": "Photonic Foundry - Global Multi-Region Dashboard",
    "tags": ["photonic-foundry", "global", "multi-region", "quantum"],
    "style": "dark",
    "timezone": "UTC",
    "editable": true,
    "hideControls": false,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": [
        {
          "name": "region",
          "type": "custom",
          "options": [
            {"text": "All Regions", "value": "$__all"},
            {"text": "US East 1", "value": "us-east-1"},
            {"text": "EU West 1", "value": "eu-west-1"},
            {"text": "AP Southeast 1", "value": "ap-southeast-1"}
          ],
          "current": {"text": "All Regions", "value": "$__all"},
          "multi": true,
          "includeAll": true,
          "allValue": ".*"
        },
        {
          "name": "compliance",
          "type": "custom",
          "options": [
            {"text": "All Frameworks", "value": "$__all"},
            {"text": "GDPR", "value": "gdpr"},
            {"text": "CCPA", "value": "ccpa"},
            {"text": "PDPA", "value": "pdpa"}
          ],
          "current": {"text": "All Frameworks", "value": "$__all"},
          "multi": true,
          "includeAll": true
        },
        {
          "name": "cloud",
          "type": "custom",
          "options": [
            {"text": "All Clouds", "value": "$__all"},
            {"text": "AWS", "value": "aws"},
            {"text": "GCP", "value": "gcp"},
            {"text": "Azure", "value": "azure"},
            {"text": "Alibaba", "value": "alibaba"}
          ],
          "current": {"text": "All Clouds", "value": "$__all"},
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Global Service Health Overview",
        "type": "stat",
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"photonic-foundry\", region=~\"$region\", cloud=~\"$cloud\"}",
            "legendFormat": "{{region}} - {{cloud}}"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "horizontal"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "DOWN", "color": "red"}}, "type": "value"},
              {"options": {"1": {"text": "UP", "color": "green"}}, "type": "value"}
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Global Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"photonic-foundry\", region=~\"$region\", cloud=~\"$cloud\"}[5m])) by (region, cloud)",
            "legendFormat": "{{region}} - {{cloud}}"
          }
        ],
        "yAxes": [
          {"label": "Requests/sec", "min": 0},
          {"show": false}
        ],
        "legend": {"show": true, "rightSide": true}
      },
      {
        "id": 3,
        "title": "Global Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"photonic-foundry\", status=~\"5..\", region=~\"$region\", cloud=~\"$cloud\"}[5m])) by (region, cloud)",
            "legendFormat": "{{region}} - {{cloud}} Errors"
          }
        ],
        "yAxes": [
          {"label": "Error Rate", "min": 0},
          {"show": false}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.05], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "10s",
          "handler": 1,
          "name": "High Error Rate Alert",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 4,
        "title": "Quantum Processing Metrics",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "targets": [
          {
            "expr": "sum(quantum_optimization_duration_seconds{region=~\"$region\", cloud=~\"$cloud\"}) by (region, cloud)",
            "legendFormat": "{{region}} - {{cloud}} Optimization Time"
          },
          {
            "expr": "sum(quantum_operations_total{region=~\"$region\", cloud=~\"$cloud\"}) by (region, cloud)",
            "legendFormat": "{{region}} - {{cloud}} Operations"
          }
        ],
        "yAxes": [
          {"label": "Seconds / Count", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 5,
        "title": "GPU Utilization by Region",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "targets": [
          {
            "expr": "avg(nvidia_gpu_utilization{region=~\"$region\", cloud=~\"$cloud\"}) by (region, cloud)",
            "legendFormat": "{{region}} - {{cloud}} GPU Usage %"
          }
        ],
        "yAxes": [
          {"label": "GPU Utilization %", "min": 0, "max": 100},
          {"show": false}
        ]
      },
      {
        "id": 6,
        "title": "Compliance Framework Status",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 22},
        "targets": [
          {
            "expr": "compliance_framework_status{region=~\"$region\", framework=~\"$compliance\"}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true},
              "indexByName": {},
              "renameByName": {
                "region": "Region",
                "framework": "Compliance Framework",
                "cloud": "Cloud Provider",
                "Value": "Status"
              }
            }
          }
        ],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Status"},
              "properties": [
                {
                  "id": "mappings",
                  "value": [
                    {"options": {"1": {"text": "COMPLIANT", "color": "green"}}, "type": "value"},
                    {"options": {"0": {"text": "NON-COMPLIANT", "color": "red"}}, "type": "value"}
                  ]
                }
              ]
            }
          ]
        }
      },
      {
        "id": 7,
        "title": "Cross-Region Latency Heatmap",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 30},
        "targets": [
          {
            "expr": "cross_region_latency_milliseconds{source_region=~\"$region\", destination_region=~\"$region\"}",
            "format": "heatmap",
            "legendFormat": "{{source_region}} -> {{destination_region}}"
          }
        ],
        "options": {
          "calculate": false,
          "yAxis": {"unit": "ms", "min": 0, "max": 500},
          "color": {"colorSpace": "interpolateSpectral", "scale": "exponential"}
        }
      },
      {
        "id": 8,
        "title": "Data Residency Compliance",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 30},
        "targets": [
          {
            "expr": "sum(data_residency_compliant{region=~\"$region\"}) by (compliance_status)",
            "legendFormat": "{{compliance_status}}"
          }
        ],
        "options": {
          "pieType": "pie",
          "tooltip": {"mode": "single"},
          "legend": {"displayMode": "table", "placement": "right", "values": ["value", "percent"]},
          "displayLabels": ["name", "percent"]
        }
      },
      {
        "id": 9,
        "title": "Resource Utilization by Cloud Provider",
        "type": "bargauge",
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 38},
        "targets": [
          {
            "expr": "avg(cpu_usage_percent{cloud=~\"$cloud\", region=~\"$region\"}) by (cloud)",
            "legendFormat": "CPU - {{cloud}}"
          },
          {
            "expr": "avg(memory_usage_percent{cloud=~\"$cloud\", region=~\"$region\"}) by (cloud)",
            "legendFormat": "Memory - {{cloud}}"
          },
          {
            "expr": "avg(storage_usage_percent{cloud=~\"$cloud\", region=~\"$region\"}) by (cloud)",
            "legendFormat": "Storage - {{cloud}}"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        },
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Quantum Circuit Success Rate",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 44},
        "targets": [
          {
            "expr": "avg(quantum_circuit_success_rate{region=~\"$region\", cloud=~\"$cloud\"})",
            "legendFormat": "Success Rate"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.8},
                {"color": "green", "value": 0.95}
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "title": "Neural Network Accuracy",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 44},
        "targets": [
          {
            "expr": "avg(neural_network_accuracy{region=~\"$region\", cloud=~\"$cloud\"})",
            "legendFormat": "Accuracy"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.85},
                {"color": "green", "value": 0.95}
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "title": "Cost Optimization Savings",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 44},
        "targets": [
          {
            "expr": "sum(cost_savings_usd{region=~\"$region\", cloud=~\"$cloud\"})",
            "legendFormat": "Total Savings"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10000},
                {"color": "green", "value": 50000}
              ]
            }
          }
        }
      },
      {
        "id": 13,
        "title": "Security Incidents by Region",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 50},
        "targets": [
          {
            "expr": "sum(increase(security_incidents_total{region=~\"$region\", cloud=~\"$cloud\"}[1h])) by (region, cloud, severity)",
            "legendFormat": "{{region}} - {{cloud}} ({{severity}})"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [5], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "1h", "now"]},
              "reducer": {"type": "sum"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "1m",
          "handler": 1,
          "name": "High Security Incident Rate",
          "noDataState": "no_data"
        }
      },
      {
        "id": 14,
        "title": "Data Processing Volume",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 50},
        "targets": [
          {
            "expr": "sum(rate(data_processed_bytes_total{region=~\"$region\", cloud=~\"$cloud\"}[5m])) by (region, cloud)",
            "legendFormat": "{{region}} - {{cloud}}"
          }
        ],
        "yAxes": [
          {"label": "Bytes/sec", "min": 0, "logBase": 1},
          {"show": false}
        ]
      },
      {
        "id": 15,
        "title": "Global SLA Compliance",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 58},
        "targets": [
          {
            "expr": "sla_compliance_percentage{region=~\"$region\", cloud=~\"$cloud\"}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true},
              "renameByName": {
                "region": "Region",
                "cloud": "Cloud Provider",
                "sla_type": "SLA Type",
                "Value": "Compliance %"
              }
            }
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Compliance %"},
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "steps": [
                      {"color": "red", "value": null},
                      {"color": "yellow", "value": 95},
                      {"color": "green", "value": 99}
                    ]
                  }
                },
                {
                  "id": "unit",
                  "value": "percent"
                }
              ]
            }
          ]
        }
      }
    ]
  }
}