# Photonic Foundry Environment Configuration
# Copy this file to .env.production and customize for your environment

# Application Environment
ENVIRONMENT=production
DEBUG=false

# Database Configuration
CIRCUIT_DB_PATH=/app/data/circuits.db

# Cache Configuration
CIRCUIT_CACHE_DIR=/app/cache/circuits
CIRCUIT_CACHE_ENABLED=true
MAX_CACHED_CIRCUITS=5000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
MAX_REQUEST_SIZE=50
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Security Configuration
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
ENABLE_API_DOCS=false
SECRET_KEY=your_secret_key_here

# Monitoring Configuration
ENABLE_METRICS=true
LOG_LEVEL=INFO

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Grafana Configuration
GRAFANA_PASSWORD=secure_password_here

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/photonic-foundry.crt
SSL_KEY_PATH=/etc/nginx/ssl/photonic-foundry.key

# Domain Configuration
DOMAIN_NAME=yourdomain.com
API_DOMAIN=api.yourdomain.com

# Performance Configuration
WORKER_PROCESSES=2
WORKER_CONNECTIONS=1000
CLIENT_MAX_BODY_SIZE=50m

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/opt/photonic-foundry/backups