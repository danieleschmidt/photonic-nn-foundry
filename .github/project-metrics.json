  "integrations": {
    "prometheus": {
      "endpoint": "http://prometheus:9090",
      "scrape_interval": "15s",
      "retention": "15d",
      "alert_rules": "/monitoring/alerting/prometheus-rules.yml",
      "custom_metrics": [
        "photonic_simulation_accuracy",
        "energy_efficiency_ratio",
        "quantum_coherence_time",
        "neural_network_convergence_rate"
      ],
      "exporters": [
        {
          "name": "node_exporter",
          "port": 9100,
          "enabled": true
        },
        {
          "name": "github_exporter",
          "port": 9171,
          "enabled": true
        },
        {
          "name": "python_app_exporter",
          "port": 8000,
          "enabled": true
        }
      ]
    },
    "github": {
      "api_endpoint": "https://api.github.com",
      "webhook_secret": "GITHUB_WEBHOOK_SECRET",
      "metrics_collection": {
        "repository_stats": true,
        "workflow_runs": true,
        "pull_requests": true,
        "issues": true,
        "releases": true,
        "security_alerts": true
      },
      "rate_limiting": {
        "requests_per_hour": 5000,
        "burst_allowance": 100
      }
    },
    "grafana": {
      "endpoint": "http://grafana:3000",
      "admin_user": "admin",
      "datasources": [
        {
          "name": "Prometheus",
          "type": "prometheus",
          "url": "http://prometheus:9090",
          "default": true
        },
        {
          "name": "GitHub",
          "type": "github",
          "access_token": "GITHUB_ACCESS_TOKEN"
        }
      ],
      "notification_channels": [
        {
          "name": "slack-alerts",
          "type": "slack",
          "webhook_url": "SLACK_WEBHOOK_URL"
        },
        {
          "name": "email-reports",
          "type": "email",
          "addresses": ["team@photonic-foundry.com"]
        }
      ]
    },
    "external_services": {
      "codecov": {
        "token": "CODECOV_TOKEN",
        "enabled": true
      },
      "sonarqube": {
        "url": "https://sonarcloud.io",
        "project_key": "photonic-nn-foundry",
        "enabled": true
      },
      "snyk": {
        "token": "SNYK_TOKEN",
        "enabled": true
      },
      "pypi": {
        "package_name": "photonic-nn-foundry",
        "track_downloads": true
      }
    }
  },
