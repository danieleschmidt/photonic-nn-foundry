        "endpoints": [
          "/repos/{owner}/{repo}/stats/commit_activity",
          "/repos/{owner}/{repo}/pulls",
          "/repos/{owner}/{repo}/issues",
          "/repos/{owner}/{repo}/actions/runs",
          "/repos/{owner}/{repo}/releases",
          "/repos/{owner}/{repo}/traffic/views",
          "/repos/{owner}/{repo}/traffic/clones"
