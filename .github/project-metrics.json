  "metrics": {
    "code_quality": {
      "description": "Code quality and maintainability metrics",
      "targets": {
        "test_coverage": {
          "value": 85,
          "unit": "percentage",
          "threshold": "minimum",
          "critical": 70,
          "warning": 75,
          "target": 85,
          "excellent": 90
        },
        "pylint_score": {
          "value": 8.5,
          "unit": "score_out_of_10",
          "threshold": "minimum",
          "critical": 6.0,
          "warning": 7.0,
          "target": 8.5,
          "excellent": 9.0
        },
        "code_complexity": {
          "value": 8,
          "unit": "cyclomatic_complexity",
          "threshold": "maximum",
          "critical": 15,
          "warning": 12,
          "target": 8,
          "excellent": 5
        },
        "technical_debt_ratio": {
          "value": 3,
          "unit": "percentage",
          "threshold": "maximum",
          "critical": 10,
          "warning": 7,
          "target": 3,
          "excellent": 1
        },
        "code_duplication": {
          "value": 2,
          "unit": "percentage",
          "threshold": "maximum",
          "critical": 8,
          "warning": 5,
          "target": 2,
          "excellent": 1
        },
        "maintainability_index": {
          "value": 80,
          "unit": "index_score",
          "threshold": "minimum",
          "critical": 60,
          "warning": 70,
          "target": 80,
          "excellent": 90
        },
        "type_coverage": {
          "value": 90,
          "unit": "percentage",
          "threshold": "minimum",
          "critical": 70,
          "warning": 80,
          "target": 90,
          "excellent": 95
        }
      },
      "tracking": {
        "frequency": "per_commit",
        "tools": ["pytest-cov", "pylint", "mypy", "sonarqube", "bandit", "flake8", "black", "isort"],
        "alerts": {
          "coverage_drop": "5_percentage_points",
          "complexity_increase": "20_percent",
          "debt_increase": "10_percent",
          "pylint_score_drop": "0.5_points"
        }
      }
    },
    "security": {
