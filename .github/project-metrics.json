        "triggers": ["downtime", "security_breach", "data_loss", "critical_vulnerability"],
        "escalation": "immediate"
      },
      {
        "name": "slack_warnings",
        "type": "slack",
        "webhook_url": "SLACK_WARNING_WEBHOOK",
        "description": "Warning alerts for monitoring",
        "triggers": ["performance_degradation", "high_error_rate", "threshold_approach"],
        "escalation": "5_minutes"
      },
      {
        "name": "email_reports",
        "type": "email",
        "recipients": ["team-leads@photonic-foundry.com", "stakeholders@photonic-foundry.com"],
        "description": "Daily and weekly metric reports",
        "triggers": ["daily_summary", "weekly_report", "monthly_summary"]
      },
      {
        "name": "pagerduty",
        "type": "pagerduty",
        "integration_key": "PAGERDUTY_INTEGRATION_KEY",
        "description": "High-priority incidents requiring immediate response",
        "triggers": ["system_down", "critical_security_event", "data_corruption"]
      }
    ],
    "alert_rules": [
      {
        "name": "high_error_rate",
        "condition": "error_rate > 2%",
        "duration": "5m",
        "severity": "warning",
        "channels": ["slack_warnings"]
      },
      {
        "name": "critical_error_rate",
        "condition": "error_rate > 5%",
        "duration": "2m",
        "severity": "critical",
        "channels": ["slack_critical", "pagerduty"]
      },
      {
        "name": "low_test_coverage",
        "condition": "test_coverage < 75%",
        "duration": "0m",
        "severity": "warning",
        "channels": ["slack_warnings"]
      },
      {
        "name": "security_vulnerability_detected",
        "condition": "critical_vulnerabilities > 0",
        "duration": "0m",
        "severity": "critical",
        "channels": ["slack_critical", "email_reports"]
      },
      {
        "name": "slow_response_time",
        "condition": "api_response_time_p95 > 500ms",
        "duration": "10m",
        "severity": "warning",
        "channels": ["slack_warnings"]
      },
      {
        "name": "deployment_failure",
        "condition": "deployment_success_rate < 95%",
        "duration": "0m",
        "severity": "critical",
        "channels": ["slack_critical"]
      }
    ]
